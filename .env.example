# Copy this file to .env and fill in the values for your environment.
# .env is gitignored — never commit it.

# ============================================================
# Application
# ============================================================
JWT_SECRET=                   # Strong random secret for JWT signing
APP_USERNAME=                 # Login username
APP_PASSWORD=                 # Login password
APP_ENCRYPTION_PRIVATE_KEY=   # RSA-2048 private key PEM for Tinfoil Hat Mode (optional — auto-generated if blank)

# ============================================================
# Cloudflare Tunnel
# ============================================================
TUNNEL_TOKEN=                 # Cloudflared tunnel token (from Cloudflare dashboard)

# ============================================================
# Nginx
# ============================================================
UPLOADER_UPSTREAM=http://uploader:8080   # Internal upstream — change only if port changes
NGINX_SERVER_NAME_HTTP=                  # HTTP server_name (e.g. test.example.com)
NGINX_SERVER_NAME_HTTPS=                 # HTTPS server_name (e.g. app.example.com)
NGINX_SSL_CERT=/etc/nginx/certs/origin.pem   # Path inside nginx container
NGINX_SSL_KEY=/etc/nginx/certs/origin.key    # Path inside nginx container
NGINX_CLIENT_MAX_BODY_SIZE=1100m         # Must be >= MAX_UPLOAD_BATCH_BYTES + overhead

# ============================================================
# Cloudflare Tunnel config (used to generate cloudflared/config.yml)
# ============================================================
CF_TUNNEL_ID=                 # Tunnel UUID from Cloudflare dashboard
CF_HOSTNAME=                  # Public hostname routed through the tunnel (e.g. test.example.com)

# ============================================================
# Uploader service (advanced — defaults are usually fine)
# ============================================================
HTTP_PORT=8080                # Internal HTTP port the Rust backend listens on
UPLOAD_UID=911                # UID for uploaded files
UPLOAD_GID=911                # GID for uploaded files
OSCAR_BASE_URL=http://oscar:3000
AUTH_SESSION_TTL_SECONDS=1800
MAX_UPLOAD_BATCH_BYTES=1073741824   # 1 GB
